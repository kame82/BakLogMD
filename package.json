{
  "name": "baklogmd",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "desktop:dev": "npm run dev -w apps/desktop",
    "desktop:tauri": "npm run tauri -w apps/desktop dev",
    "desktop:build": "npm run build -w apps/desktop",
    "web:dev": "npm run dev -w apps/web",
    "webapi:dev": "node scripts/dev-web-api.mjs",
    "web:build": "npm run build -w apps/web",
    "api:dev": "npm run dev -w apps/api",
    "api:build": "npm run build -w apps/api",
    "shared:build": "npm run build -w packages/shared",
    "build": "npm run shared:build && npm run api:build && npm run web:build && npm run desktop:build"
  }
}
